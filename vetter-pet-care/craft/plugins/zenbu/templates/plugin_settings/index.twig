{% import "_includes/forms" as forms %}


<h1>{{"General Plugin Settings"|t}}</h1>

<div class="field">
	<div class="heading">
		<label for="zenbu_nav_label">{{"Label for Top Navigation/Headers"|t}}</label>
	</div>
	{{ forms.text({
		id: 		"zenbu_nav_label",
		label:      "Label for Top Navigation/Headers"|t,
		name:       'nav_label',
		value:		settings.nav_label,
		placeholder: "Default: Zenbu"|t,
	}) }}
</div>

<div class="field">
	{{ forms.checkbox({
		id: 		"redirect_to_zenbu_label",
		label:      "Redirect to Zenbu after saving entry"|t,
		name:       'redirect_to_zenbu',
		value:		'y',
		checked:    settings.redirect_to_zenbu
	}) }}
</div>

<div class="field">
	{{ forms.checkbox({
		id: 		"hide_entries_tab",
		label:      "Hide Entries Tab in Control Panel"|t,
		name:       'hide_entries_tab',
		value:		'y',
		checked:    settings.hide_entries_tab
	}) }}
</div>

{% if craft.config.devMode %}

	<div class="field">
		<div class="heading">
			<h2>{{'Dev Mode Settings'|t}}</h2>
			<div class="instructions"><p>{{"These settings will only take effect when they are enabled and when Dev Mode is enabled on your installation. <strong>If you can read this, it means that Dev Mode is ENABLED on your installation</strong>."|t|raw}}</p></div>
		</div>
	</div>

	<div class="field">
		<div class="heading">
			<label>{{'Search Criteria'|t}}</label>
		</div>
		{{ forms.checkbox({
			id: 		"show_search_criteria",
			label:      "Display search criteria at the end of result listing"|t,
			name:       'show_search_criteria',
			value:		'y',
			checked:    settings.show_search_criteria
		}) }}
	</div>

	<div class="field">
		<div class="heading">
			<label>{{'Caching'|t}}</label>
			<div class="instructions"><p>{{"Zenbu entry results are cached for performance. You can disable caching by checking this option. WARNING: You may experience slower performance in searching and retrieving complex entry data."|t}}</p></div>
		</div>
		{{ forms.checkbox({
			id: 		"disable_entry_result_caching",
			label:      "Disable entry result caching"|t,
			name:       'disable_entry_result_caching',
			value:		'y',
			checked:    settings.disable_entry_result_caching
		}) }}
	</div>
{% endif %}
